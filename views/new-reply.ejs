<!-- new-reply.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reply to <%= postToReply.author.displayName %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.17/tailwind.min.css"  crossorigin="anonymous" referrerpolicy="no-referrer" />
  </head>
  <body class="bg-gray-100">
    <div class="container mx-auto my-10">
      <h1 class="text-4xl font-semibold mb-6">Reply to <%= postToReply.author.displayName %></h1>
      <a href="/forum/thread/<%= thread.id %>" class="text-blue-500 hover:text-blue-700 mb-6">Back to thread</a>
      <hr class="border-b border-gray-400 mb-6">
      <h3 class="text-2xl font-semibold mb-4">Original message: (Created at <%= postToReply.createdAt %>)</h3>
      <div class="bg-white p-6 rounded shadow mb-6">
        <p class="text-lg"><%= postToReply.content %></p>
      </div>
      <hr class="border-b border-gray-400 mb-6">
      <form action="/forum/thread/<%= thread.id %>/new-post" method="post" class="bg-white p-6 rounded shadow">
        <input type="hidden" name="replyTo" value="<%= postToReply.id %>">
        <label for="content" class="block text-xl font-semibold mb-2">Your Reply:</label>
        <textarea name="content" id="content" rows="5" class="w-full border border-gray-300 p-2 rounded mb-4" required></textarea>
        <button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded">Post</button>
      </form>
    </div>
  </body>
</html>
