<!-- edit-post.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <title>Edit Post</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.17/tailwind.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
  </head>
  <body class="bg-gray-100">
    <% include('partials/navbar') %>
    <div class="container mx-auto px-6 py-4">
      <h1 class="text-3xl font-bold text-gray-800 mb-4">Edit Post</h1>
      <a href="/forum/thread/<%= post.ThreadId %>" class="text-blue-500 hover:text-blue-600">Back to thread</a>
      <hr class="my-4">
      <form action="/forum/post/<%= post.id %>/edit" method="post" class="mt-4">
        <label for="content" class="block text-sm font-semibold text-gray-700">Content:</label>
        <textarea name="content" id="content" rows="5" class="w-full border border-gray-400 p-2 mt-2 rounded" required><%= post.content %></textarea>
        <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded mt-4">Update Post</button>
      </form>
    </div>
  </body>
</html>
